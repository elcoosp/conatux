{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:unicorn/recommended",
    "plugin:security/recommended",
    "plugin:jsdoc/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "immutable",
    "filenames",
    "xss",
    "jsdoc",
    "jsx-a11y",
    "prettier"
  ],
  "rules": {
    "immutable/no-let": 2,
    "immutable/no-this": 2,
    "immutable/no-mutation": 2,
    "filenames/match-regex": 2,
    "filenames/match-exported": 2,
    "xss/no-mixed-html": 2,
    "xss/no-location-href-assign": 2,
    "prettier/prettier": 2
  },
  "overrides": [
    {
      "files": [
        "*.config.js",
        "webpack.*.js"
      ],
      "rules": {
        "immutable/no-mutation": 0,
        "filenames/match-regex": 0,
        "xss/no-mixed-html": 0
      }
    }
  ]
}